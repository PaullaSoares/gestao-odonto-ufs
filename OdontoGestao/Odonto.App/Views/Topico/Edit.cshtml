@model Odonto.Core.Models.Topico

@{
    ViewData["Title"] = "Editar Tópico";
}

<h4>Editar Tópico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Assunto, htmlAttributes: new { @class = "control-label col-md-6" })
                @Html.DropDownListFor(x => x.AssuntoId, (IEnumerable<SelectListItem>)ViewBag.Assuntos, htmlAttributes: new { @class = "form-control control-with-side-button" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TopicoPai, htmlAttributes: new { @class = "control-label col-md-6" })
                @Html.DropDownListFor(x => x.TopicoPaiId, (IEnumerable<SelectListItem>)ViewBag.Topicos, "", htmlAttributes: new { @class = "form-control control-with-side-button" })
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary pull-right mb-xl" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
